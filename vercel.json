{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.3.0"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
